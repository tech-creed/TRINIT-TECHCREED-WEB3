<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title>CollabChain | KYC</title>

  <!-- Favicons -->
  <link href="/img/favicon.png" rel="icon">
  <link href="/img/apple-touch-icon.png" rel="apple-touch-icon">

  <!-- Google Fonts -->
  <link
    href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
    rel="stylesheet">

  <!-- Vendor CSS Files -->
  <link href="/vendor/aos/aos.css" rel="stylesheet">
  <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
  <link href="/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
  <link href="/vendor/remixicon/remixicon.css" rel="stylesheet">
  <link href="/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

  <!-- Template Main CSS File -->
  <link href="/css/styles.css" rel="stylesheet">
  <!-- ===== CSS ===== -->
  <link rel="stylesheet" href="/css/login_register.css">

<body>

  <header id="header" class="header fixed-top">
    <div class="container-fluid container-xl d-flex align-items-center justify-content-between">

      <a href="/dashboard" class="logo d-flex align-items-center">
        <img src="/img/logo.png" alt="">
        <span>CollabChain</span>
      </a>

      <nav id="navbar" class="navbar">
        <ul>
          <li><a class="getstarted scrollto" href="/auth/logout">Logout</a></li>
        </ul>
        <i class="bi bi-list mobile-nav-toggle"></i>
      </nav>

    </div>
  </header>

  <section id="hero" class="hero d-flex align-items-center" style="justify-content: center;">

    <div class="container" style="top: 50px;max-width: 540px;">
      <div class="form">
        <span class="title">Verification</span>

        <form id="docVerifyForm"
            enctype="multipart/form-data"
            onSubmit="App.docVerify(); return false;"
          >
            <div class="input-field">
              <input
                id="ownerName"
                type="text"
                name="ownerName"
                placeholder="Enter Full Name"
                required
              />
              <i class="bi bi-person icon"></i>
            </div>
            <div class="input-field" style="display: none!important;">
              <input
                id="docName"
                type="text"
                name="docName"
                required
                value="KYC_VERIFICATION_DOCUMENT"
              />
              <i class="bi bi-envelope icon"></i>
            </div>
            <div class="input-field">
              <input id="file" type="file" name="document" required />
              <i class="bi bi-file-earmark"></i>
            </div>
            <div class="input-field" style="display: none!important;">
              <input
                id="validated"
                type="text"
                name="validated"
                value="false"
                required
              />
              <i class="bi bi-check"></i>
            </div>
            <div class="input-field">
              <input
                id="description"
                type="text"
                name="description"
                placeholder="What going to do with CollabChain"
                required
              />
              <i class="bi bi-list"></i>
            </div>
            <div class="input-field">
              <input
                id="tokenId"
                type="text"
                name="tokenId"
                placeholder="Enter Address"
                required
                readonly
              />
              <i class="bi bi-arrow-right"></i>
            </div>
            <div class="input-field button">
              <input type="submit" value="Sumbit for Verification" />
            </div>
          </form>

      </div>
    </div>

  </section>

  <!-- Vendor JS Files -->
  <script src="/vendor/purecounter/purecounter_vanilla.js"></script>
  <script src="/vendor/aos/aos.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/vendor/glightbox/js/glightbox.min.js"></script>
  <script src="/vendor/isotope-layout/isotope.pkgd.min.js"></script>
  <script src="/vendor/swiper/swiper-bundle.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/truffle-contract@4.0.31/dist/truffle-contract.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/web3/1.7.0-rc.0/web3.min.js"></script>

  <script src="/js/main.js"></script>
  <script src="/js/app.js"></script>

  <script>
    cookies = document.cookie.split(';')
    
    document.getElementById('tokenId').value = decodeURIComponent(cookies[0].split('=')[1]).slice(2,11)
  </script>
</body>

</html>