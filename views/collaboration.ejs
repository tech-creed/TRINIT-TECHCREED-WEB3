<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title>GreenChain | Sell Token</title>

  <!-- Favicons -->
  <link href="/img/favicon.png" rel="icon">
  <link href="/img/apple-touch-icon.png" rel="apple-touch-icon">

  <!-- Google Fonts -->
  <link
    href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
    rel="stylesheet">

  <!-- Vendor CSS Files -->
  <link href="vendor/aos/aos.css" rel="stylesheet">
  <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
  <link href="vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
  <link href="vendor/remixicon/remixicon.css" rel="stylesheet">
  <link href="vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

  <link rel="stylesheet" href="/css/login_register.css">

  <link href="/css/styles.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">

  <!-- ===== CSS ===== -->

<body>

  <header id="header" class="header fixed-top">
    <div class="container-fluid container-xl d-flex align-items-center justify-content-between">

      <a href="/dashboard" class="logo d-flex align-items-center">
        <img src="/images/logo.png" width="100px" alt="">
      </a>
      <nav id="navbar" class="navbar">
        <ul>
          <li><a class="scrollto" href="/community">Community</a></li>

          <li><a class="scrollto" href="/profile">My Skills</a></li>

          <li><a class="scrollto" href="/profile">My Achievement</a></li>

          <li><a class="scrollto" href="/profile">My Projetcs</a></li>

          <li><a class="scrollto" href="/collaboration">Collaboration</a></li>


          <li><a class="getstarted scrollto" href="/auth/logout">Logout</a></li>
        </ul>
        <i class="bi bi-list mobile-nav-toggle"></i>
      </nav>

    </div>
  </header>

  <section id="hero" class="hero d-flex row align-items-center justify-content-center" style="padding-left: 80px; padding-right: 90px;">

    <div class="col">
      <div>
        <h1  data-aos-delay="600"><u>Token Name</u></h1>
        <h1  data-aos-delay="500" id="tokenPrice">SkillCollabToken</h1>
      </div>
      <br><br>
      <div>
        <h1  data-aos-delay="600"><u>Token Symbol</u></h1>
        <h1  data-aos-delay="500" id="tokenBalance">SCT</h1>
      </div>
    </div>

    <div  data-aos-delay="200" class="container col" style="top: 50px;max-width: 540px;">
      <div class="form">
        <span class="title">Let's Collaburate</span>

        <form action="/community" method="get">
          <div class="input-field">
            <input id="walletID" type="text" name="walletID" required readonly>
            <i class="bi bi-envelope icon"></i>
          </div>
          
          <div>
            
            <div class="input-field">
              <input id="tokenCount" type="text" placeholder="Token Count" required>
              <i class="bi bi-arrow-right"></i>
            </div>
          </div>

          <div class="input-field">
            <input id="projectDescription" type="text" placeholder="Your Project Descripition" required>
            <i class="bi bi-arrow-right"></i>
          </div>

          <div class="input-field">
            <input id="tokenPriceToSell" type="text" placeholder="Compensation Price (per token)" required>
            <i class="bi bi-arrow-right"></i>
          </div>

          <div class="input-field button">
            <input type="submit" value="Place Project in Community">
          </div>

        </form>
      </div>
    </div>

  </section>

  <!-- Vendor JS Files -->
  <script src="vendor/purecounter/purecounter_vanilla.js"></script>
  <script src="vendor/aos/aos.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="vendor/glightbox/js/glightbox.min.js"></script>
  <script src="vendor/isotope-layout/isotope.pkgd.min.js"></script>
  <script src="vendor/swiper/swiper-bundle.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/truffle-contract@4.0.31/dist/truffle-contract.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/web3/1.7.0-rc.0/web3.min.js"></script>

  <script src="/js/main.js"></script>
  <script src="/js/app.js"></script>
  <script>
    cookies = document.cookie.split(';')
    document.getElementById('walletID').value = decodeURIComponent(cookies[0].split('=')[1])
    App.detailsToListTokenForSell()
  </script>
</body>

</html>